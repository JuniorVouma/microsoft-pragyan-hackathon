<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@drawable/rsz_home_bg">

    <ImageView
        android:layout_width="200sp"
        android:layout_height="200sp"
        android:id="@+id/imageView1"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:src="@drawable/rsz_ow"
        android:background="@android:color/transparent"/>

    <ImageView
        android:layout_width="400sp"
        android:layout_height="100sp"
        android:id="@+id/imageView2"
        android:layout_marginTop="4dp"
        android:src="@drawable/sah"
        android:background="@android:color/transparent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="10sp"
        android:text="सीखो  सिखाअो,  पढ़ो  पढ़ाअो,  "
        android:textColor="@color/white"
        android:textSize="26sp"
        android:id="@+id/textView25"
        android:layout_gravity="center_horizontal" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="26sp"
        android:text="ङिजिटल  इिॱङिया  बनाअो  !"
        android:textColor="@color/white"
        android:id="@+id/textView26"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="20sp"
        android:text="Towards a Stronger Digital India"
        android:layout_marginTop="12sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:id="@+id/textView27"
        android:layout_gravity="center_horizontal" />


</LinearLayout>