<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/email_struct"
        android:layout_alignBottom="@+id/body_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="5dp"
        android:layout_height="10dp"
        android:id="@+id/from_text"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="180dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="70dp"
        android:layout_marginTop="20dp"
        android:layout_height="20dp"
        android:id="@+id/to_text"
        android:layout_marginLeft="70dp"
        android:layout_below="@+id/from_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/body_text"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="180dp"

        android:layout_marginTop="90dp"
        android:layout_below="@+id/to_text"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:id="@+id/start_button"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/to_text"
        android:layout_toEndOf="@+id/to_text" />

</RelativeLayout>